@model ImageWeb.Models.ImageItem
@{
    ViewBag.Title = "ViewImage";
}

<h2>ImageViewer</h2>

<div class="circular-image">
    <img src="@Url.Content(Model.ImageRelativePathThumbnail)" alt="" class="circular-image" style="width:auto; height:auto; max-width:100%; max-height:100%;">
    <div class="caption">
        <h4>@Model.Name</h4>
        <p>Date: @Model.Month / @Model.Year</p>
        <a href="@Url.Action("ImageDeleter", new { imageFullUrl = Model.ImageFullUrl })" id="btnDelete" class="btn btn-danger btn-xs" role="button">Delete</a>
        <a href="@Url.Action("Images", "Home", new { imageFullUrl = Model.ImageFullUrl })" id="btnView" class="btn btn-info btn-xs" role="button">Back</a>
    </div>
</div>