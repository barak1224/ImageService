@model ImageWeb.Models.ImagesModel
@{
    ViewBag.Title = "Images";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .circular-image {
            border-radius: 50%;
        }
    </style>
</head>
<body>

    <h2>Photos</h2>

    <div class="container" id="tourpackages-carousel">

        <div class="row">
            @foreach (var imageItem in Model.Images)
            {
                <div class="col-xs-18 col-sm-6 col-md-3">

                    <div class="thumbnail">
                        <img src="@Url.Content(imageItem.ImageRelativePathThumbnail)" alt="" class="circular-image" width="242" height="200">
                        <div class="caption">
                            <h4>@imageItem.Name</h4>
                            <p>Date: @imageItem.Month / @imageItem.Year</p>
                            <p>
                                <a href="@Url.Action("ViewImage", new { imageFullUrl = imageItem.ImageFullUrl })" id="btnView" class="btn btn-info btn-xs" role="button">View</a>
                                <a href="@Url.Action("ImageDeleter", new { imageFullUrl = imageItem.ImageFullUrl })" id="btnDelete" class="btn btn-danger btn-xs" role="button">Delete</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>